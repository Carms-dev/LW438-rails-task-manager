<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>Status: <%= @task.completed ? 'done' : 'not done' %></p>

<h2>Edit Task</h2>

<%= form_for @task, html: { class: 'form' } do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_area :details %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit %>
<% end %>

<%= link_to 'delete', task_path(@task), method: :delete, data: { confirm: "you sure?"} %>